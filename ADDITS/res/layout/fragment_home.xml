<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    tools:ignore="NestedWeights" >

    <LinearLayout
        android:id="@+id/loadingNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

            <ImageView
                android:id="@+id/loadingAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/loading_dissected"
                android:contentDescription="@string/placeholder" />

    </LinearLayout>

    <com.pk.addits.ScrollGridView
        android:id="@+id/GridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:visibility="gone" />

    <Button
        android:id="@+id/MoarArticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button_purple_selector"
        android:text="Load More Articles"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>